<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.wangkui.firstnavigable.ui.login_dl.view.LoginActivity">
    <Button
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginLeft="@dimen/x30"
        android:src="@drawable/b_three"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y120"
        android:text="欢迎登陆第一通航"
        android:textColor="#222222"
        android:textSize="@dimen/x38"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <EditText
        android:id="@+id/phone_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:textColorHint="#999999"
        android:inputType="phone"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@id/title"
        android:layout_marginTop="@dimen/y100"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x60"/>
    <EditText
        android:id="@+id/yuanzheng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:textColorHint="#999999"
        android:background="@null"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginTop="@dimen/y56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/phone_num"/>

    <TextView
        android:id="@+id/gettext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y8"
        android:text="获取验证码"
        app:layout_constraintBottom_toBottomOf="@+id/yuanzheng"
        app:layout_constraintEnd_toEndOf="@+id/phone_num"
        android:layout_marginRight="@dimen/x40" />
    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:layout_marginLeft="@dimen/x60"
        android:layout_marginRight="@dimen/x60"
        android:layout_marginTop="@dimen/y30"
        android:background="#929191"
        app:layout_constraintTop_toBottomOf="@id/yuanzheng"></View>
    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未注册 手机验证后自动登陆"
        app:layout_constraintTop_toBottomOf="@id/v"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/y20"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/login3x"
        android:layout_marginRight="@dimen/x60"
        android:layout_marginLeft="@dimen/x60"
        app:layout_constraintTop_toBottomOf="@id/t"
        />
    <TextView
        android:id="@+id/tt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并同意《用户协议》"
        android:layout_marginTop="@dimen/y20"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
        android:id="@+id/check_yi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y4"
        app:layout_constraintBottom_toBottomOf="@+id/tt"
        app:layout_constraintEnd_toStartOf="@+id/tt"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        android:layout_marginRight="@dimen/y8" />

    <TextView
        android:id="@+id/ttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方账号快速登陆"
        app:layout_constraintTop_toBottomOf="@id/tt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/y80"
        />
    <ImageView
        android:id="@+id/qq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/qq3x"
        android:layout_marginTop="@dimen/y50"
        app:layout_constraintTop_toBottomOf="@id/ttt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:id="@+id/weixin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/weixin3x"
        app:layout_constraintBottom_toBottomOf="@+id/qq"
        app:layout_constraintEnd_toStartOf="@+id/qq"
        android:layout_marginRight="@dimen/x120" />
    <ImageView
        android:id="@+id/xinlang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xinlang3x"
        app:layout_constraintBottom_toBottomOf="@+id/qq"
        app:layout_constraintLeft_toRightOf="@id/qq"
        android:layout_marginLeft="@dimen/x120"
        />
</android.support.constraint.ConstraintLayout>
